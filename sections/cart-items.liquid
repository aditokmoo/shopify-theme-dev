<section class="cart-items">
    <h2>Your Cart</h2>
    {% if cart.item_count > 0 %}
    <ul>
        {% for item in cart.items %}
        <li>
            <img src="{{ item.image | img_url: 'small' }}" alt="{{ item.product.title }}" width="100" height="100">
            <p>{{ item.product.title }} - {{ item.quantity }}</p>
            <p>Price: {{ item.line_price | money }}</p>
        </li>
        {% endfor %}
    </ul>
    <p>Total: {{ cart.total_price | money }}</p>
    {% else %}
    <p>Your cart is empty.</p>
    {% endif %}
</section>